{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".storybook", "dist", "build", "jest", "tests"]
}
