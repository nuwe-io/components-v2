{
  "extends": "../../jsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@core": ["./core/*"],
      "@layouts": ["./layouts/*"],
      "@configs": ["./configs/*"],
      "@context": ["./context/*"]
    }
  },
  "include": ["src"],
  "exclude": [".storybook", "node_modules", "build"]
}
