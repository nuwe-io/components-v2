{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist", // Needed for rollup to work (generates the bundle)
    "declaration": true, // Needed for rollup to work (generates .d.ts files)
    "declarationDir": ".", // Ouput location of generated bundled 
    "moduleResolution": "node",
    "jsx": "react-jsx", // Allows to use JSX in .tsx files without importing React and avoiding rollup errors
    "module": "esnext",
    "target": "ESNext", // To use the last features of JS use at least ES2015
    "allowSyntheticDefaultImports": true, // Allows to use default imports from modules that don't have a default export
    "resolveJsonModule": true, // Allows to import JSON files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true, // Stronger type checking (recommended),
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".storybook",
    "dist",
    "build",
    "jest",
    "tests"
  ]
}